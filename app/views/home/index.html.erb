<%= @candidates %>
<table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        <% @candidates.each do |candidate| %>
            <tr>
               
                <td><%= candidate.first_name %></td>
                <td><%= candidate.last_name %></td>
                <td><%= candidate.email %></td>
            </tr>
        <% end %>    
            
        </tbody>
    </table>